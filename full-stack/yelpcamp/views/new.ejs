<%- include("partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Create a new campground!</h1>
        <div style="width: 30%; margin: 50px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name">
                </div>
                <div class="form-group">
                    <input class="form-control" text="text" name="image" placeholder="Image URL">
                </div>
                <div class="form-group">
                    <input class="form-control" text="text" name="description" placeholder="Description...">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go back</a>
        </div>
    </div>
</div>

<%- include("partials/footer") %>