<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%=blog.image%>">
            <div class="content">
                <span><%=blog.created.toDateString() %></span> 
                <!-- this is a way to transform the date to a better format -->
            </div>
            <div class="description">
                <p><%- blog.body %></p>
                <!-- with only one '-', the user can execute html code, only that they can also execute javascript with the script tag, which is not good (they can put an alert, for example) -->
            </div>
            <a class="ui orange basic button" href="/blogs/<%= blog._id%>/edit">Edit</a>
            <form id="delete" action="/blogs/<%= blog._id%>?_method=DELETE" method="POST">
                <button class="ui red basic button">Delete</button>
            </form>
        </div>
    </div>
</div>

<%- include("partials/footer") %>