<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">Add your profile</h1>
	<div class="col-6 offset-3">
		<form action="/carers" method="POST">
			<div class="mb-3">
				<label class="form-label" for="title">Title</label>
				<input
					class="form-control"
					type="text"
					name="carer[title]"
					id="title"
				/>
			</div class="mb-3">
			<div>
				<label class="form-label" for="location">Location</label>
				<input
					class="form-control"
					type="text"
					name="carer[location]"
					id="location"
				/>
			</div>
			<div class="mb-3">
				<button class="btn btn-success">Add profile</button>
			</div>
		</form>
		<a href="/carers">All carers</a>
	</div>
</div>
