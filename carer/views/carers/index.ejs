<% layout('layouts/boilerplate') %>
<h1>All carers</h1>
<div>
	<a href="/carers/new">Add your profile</a>
</div>
<% for(let carer of carers){ %>
<div class="card" mb-3>
	<div class="row">
		<div class="col-md-4">
			<img
				class="img-fluid"
				alt="Healthcare related image"
				src="<%= carer.images[0].url %> "
			/>
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title"><%= carer.title %></h5>
				<p class="card-text"><%= carer.description %></p>
				<p class="card-text">
					<small class="text-muted"><%= carer.location %> </small>
				</p>
				<a href="/carers/<%= carer._id %>" class="btn btn-primary"
					>View <%= carer.title %>
				</a>
			</div>
		</div>
	</div>
</div>
<% } %>
