<% layout('layouts/boilerplate') %>

<div class="row">
	<div class="col-6 offset-3">
		<div class="card mb-3">
			<img src="<%= carer.image %> " alt="Healthcare related image" class="card-img-top">
			  <h5 class="card-title"><%= carer.title %></h5>
			  <p class="card-text"><%= carer.description %></p>
			</div>
			<ul class="list-group list-group-flush">
			  <li class="list-group-item text-muted"><%= carer.location %></li>
			  <li class="list-group-item">$<%= carer.price %> per hour</li>
			</ul>
			<div class="card-body">
				<a class="card-link btn btn-info" href="/carers/<%= carer._id %>/edit ">Edit profile</a>
				<form class="d-inline" action="/carers/<%= carer._id %>?_method=DELETE" method="POST"><button class="btn btn-danger">Delete profile</button></form>
			</div>
			<div class="card-footer text-muted">
				2 days ago
			</div>
			<h2>Leave a review</h2>
			<form action="/carers/<%= carer._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
				<div class="mb-3">
					<label class="form-label" for="rating">Rating</label>
					<input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
				</div>
				<div class="mb-3">
					<label class="form-label" for="body">Review</label>
					<textarea class="form-control" name="review[body]" id="body" cols="30" rows="3" required></textarea>
					<div class="valid-feedback">
						Looks good!
					</div>
				</div>
				<button class="btn btn-success">Submit</button>
			</form>
		  </div>
	</div>
</div>

